<html lang="en" class="vf-no-js">
    <head>
        <link rel="stylesheet" href="https://assets.emblstatic.net/vf/v2.5.8/css/styles.css">
        <title>{{ accession_id }}</title>
    </head>

    <body>
        <header class="vf-global-header">
            <!-- <a href="https://www.ebi.ac.uk/bioimage-archive" class="vf-logo | vf-logo--has--text">
                <img class="vf-logo__image" src="https://www.ebi.ac.uk/biostudies/images/collections/bioimages/logo.png">
                <div class="vf-logo__text">BioImage Archive</div>
            </a> -->
            <header class="vf-global-header">

                <div class="vf-global-header__inner">
          
                  <a href="http://www.embl.de" class="vf-logo">
                    <img class="vf-logo__image" src="images/BIA-Logo.png" alt="BioImage Archive">
                    <span class="vf-logo__text">   BioImage Archive</span>
                  </a>
          
                </div>
          
            </header>
        </header>

        <div class="vf-stack vf-stack--500">
            <section class="vf-intro | embl-grid embl-grid--has-centered-content">
                <div></div>
                <div>
                    <h1 class="vf-intro__heading vf-intro__heading--has-tag">{{ study.accession_id }}<a href="JavaScript:Void(0);" class="vf-badge vf-badge--primary vf-badge--phases">alpha</a></h1>
                    <h2 class="vf-intro__subheading">{{ study.title }}</h2>
                    Released {{ study.release_date }}
                    <p></p>
                    Authors: {{ authors }}
                    <!--
                    {% for aname in study.authors %}
                    {{aname.name}} , 
                    {% endfor %} 
                    -->
                    <p></p>
                    <figure class="vf-figure vf-figure--align vf-figure--align-centered">
                        <img class="vf-figure__image" src="{{ study.example_image_uri }}">
                    </figure>  
                    {{ study.description }}

                    
                </div>
                <div></div>
            </section>

            <!-- Study information -->
            <section class="vf-content | embl-grid embl-grid--has-centered-content">
                <div>
                    <h2 class="vf-section-header__heading">Study information</h2>
                </div>
                <div>
                    <div class="vf-content">
                        <div class="vf-grid vf-grid__col-2">
                            <div><b>Organism</b></div>
                            <div>{{ study.organism }}</div>
                            <div><b>Study type</b></div>
                            <div>Image segmentation</div>
                            <div><b>Imaging type</b></div>
                            <div>{{ study.imaging_type }}</div>
                        </div>
                    </div>
                    View all study metadata.
                </div>
                <div></div>
            </section>
            <!-- Images -->
            <section class="vf-content | embl-grid embl-grid--has-centered-content">
                <div>
                    <h2 class="vf-section-header__heading">Images</h2>
                    <ul class="vf-list">
                        <li>{{ study.images|length }}</li>
                        <li>XXX image annotations</li>
                        <li>YYY other files</li>
                    </ul>
                </div>
                <div>

                    <section>
                        
                    <table class="vf-table">
                        <caption class="vf-table__caption">Visual examples</caption>
                        <colgroup>
                              <col span="1" style="width: 30%;">
                              <col span="1" style="width: 50%;">
                              <col span="1" style="width: 20%;">
                              <col span="1" style="width: 10%;">
                        </colgroup>
                            <tr class="vf-table__row">
                                <th class="vf-table__heading">Image ID</th>
                                <th class="vf-table__heading">Filename</th>
                                <th class="vf-table__heading">Dimensions</th>
                                <th class="vf-table__heading vf-table__heading--actions">Actions</th>
                            </tr>
                            {% for image in images %}
                            <tr class="vf-table__row">
                                <td class="vf-table__cell">{{ image.id }}</td>
                                <td class="vf-table__cell">{{ image.original_relpath }}</td>
                                {% if image.dimensions %}
                                    <td class="vf-table__cell">{{ image.dimensions }}</td>
                                {% elif image.attributes.get('SizeX') %}
                                    <td class="vf-table__cell"> ({{ image.attributes['SizeT'] }}, {{ image.attributes['SizeC'] }}, {{ image.attributes['SizeZ'] }}, {{ image.attributes['SizeY'] }}, {{ image.attributes['SizeX'] }})</td>
                                {% else %}
                                    <td class="vf-table__cell"> None </td>
                                {% endif %}
                                <td class="vf-table__cell--actions">
                                    <a href={{ landing_uris[image.id] }}><button class="vf-button vf-button--sm vf-button--icon">view</button><a>
                                    <button class="vf-button vf-button--sm vf-button--icon">download</button>
                                </td>                            
                            </tr>
                            {% endfor %}
                      </table>
                      </section>
                </div>
            </section>

        </div>
    </body>
</html>